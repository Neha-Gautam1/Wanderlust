<% layout("/layouts/boilerplate.ejs")%>
<body>
  <h3>All Listings</h3>
  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
    <% for(let listing of allListings){ %> 
      <a href="/listings/<%=listing._id%>" class="listing-link">
        <div class="card col listing-card">
          <img src="<%=listing.image%>" class="card-img-top" alt="listing_image" style="height:20rem;">
          <div class="card-img-overlay">acd</div>
          <div class="card-body">
            <!-- <h5 class="card-title">Card title</h5> -->
           <b> <p class="card-text"><%=listing.title%></b><br>
              &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
            </p>
          </div>
        </div>
      </a>
      
      <% } %>
  </div>
  
</body>
